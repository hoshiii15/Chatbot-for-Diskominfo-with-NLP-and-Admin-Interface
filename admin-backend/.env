# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=sqlite:./database.sqlite
# For PostgreSQL production:
# DATABASE_URL=postgresql://username:password@localhost:5432/faq_admin

# Python Bot Configuration
PYTHON_BOT_URL=http://127.0.0.1:5000
PYTHON_BOT_TIMEOUT=30000

# File Paths (relative to python-bot directory)
FAQ_DATA_PATH=../python-bot/data
FAQ_STUNTING_FILE=faq_stunting.json
FAQ_PPID_FILE=faq_ppid.json
BOT_LOG_FILE=../python-bot/bot.log
BACKUP_PATH=./backups

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=json

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/admin-backend.log

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_INTERVAL=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000

# Health Check
HEALTH_CHECK_INTERVAL=60000
PYTHON_BOT_HEALTH_TIMEOUT=5000

# Analytics
ANALYTICS_RETENTION_DAYS=90
POPULAR_QUESTIONS_LIMIT=10
